<body>
    <h1>ðŸŽ° Eurojackpot Zahlen Generator</h1>
    <button onclick="generateNumbers()">Neue Zahlen generieren</button>
    <div class="numbers" id="output"></div>

    <script>
        function generateNumbers() {
            const mainNumbers = getUniqueRandomNumbers(5, 1, 50);
            const euroNumbers = getUniqueRandomNumbers(2, 1, 12);

            document.getElementById('output').innerHTML =
                "<strong>Hauptzahlen:</strong> " + mainNumbers.join(", ") + "<br>" +
                "<strong>Eurozahlen:</strong> " + euroNumbers.join(", ");
        }

        function getUniqueRandomNumbers(count, min, max) {
            let numbers = new Set();
            while (numbers.size < count) {
                numbers.add(Math.floor(Math.random() * (max - min + 1)) + min);
            }
            return Array.from(numbers).sort((a, b) => a - b);
        }
    </script>
